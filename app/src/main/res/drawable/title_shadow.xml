<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="oval" >

<item>
    <shape android:shape="rectangle" >
        <gradient
            android:startColor="@color/action_start"
            android:endColor="@color/action_end"
            android:angle="360"
            />
    </shape>
</item>

<!-- title_shadow -->
<item
    android:bottom="0dp"
    android:right="0dp"
    android:top="12dp">
    <shape android:shape="rectangle" >
        <gradient
            android:angle="90"
            android:centerColor="#673AB7"
            android:endColor="#5033691e"
            android:startColor="#0033691e"
            android:type="linear"
            android:useLevel="false" />

        <size
            android:height="50dp"
            android:width="50dp" />
    </shape>
</item>

<!-- center -->
<item
    android:bottom="10dp"
    android:top="8dp">
    <shape android:shape="rectangle" >
        <size
            android:height="50dp"
            android:width="50dp" />

        <gradient
            android:startColor="@color/action_start"
            android:endColor="@color/action_end"
            android:angle="360"
            />
    </shape>
</item>

</layer-list>
