<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/mainGuideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mainPartyBtn"
        app:layout_constraintVertical_bias="0.5"/>

    <TextView
        android:id="@+id/mainGuideText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/mainGuideBtn"
        app:layout_constraintStart_toStartOf="@id/mainGuideBtn"
        app:layout_constraintEnd_toEndOf="@id/mainGuideBtn"
        android:textColor="@color/candidateSearchFontColor"
        android:textSize="18sp"
        android:fontFamily="@font/gmarket_sans_bold"
        android:text="총선 안내"
        />


    <ImageView
        android:id="@+id/mainPartyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main2"
        app:layout_constraintLeft_toRightOf="@id/mainGuideBtn"
        app:layout_constraintTop_toTopOf="@id/mainGuideBtn"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/mainPartyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/mainPartyBtn"
        app:layout_constraintStart_toStartOf="@id/mainPartyBtn"
        app:layout_constraintEnd_toEndOf="@id/mainPartyBtn"
        android:textColor="@color/candidateSearchFontColor"
        android:textSize="18sp"
        android:fontFamily="@font/gmarket_sans_bold"
        android:text="정당 확인"

        />

    <ImageView
        android:id="@+id/mainDistrictBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main3"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainGuideText"
        app:layout_constraintRight_toLeftOf="@id/mainPartyBtn"
        />
    <TextView
        android:id="@+id/mainDistrictText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/mainDistrictBtn"
        app:layout_constraintStart_toStartOf="@id/mainDistrictBtn"
        app:layout_constraintEnd_toEndOf="@id/mainDistrictBtn"
        android:textColor="@color/candidateSearchFontColor"
        android:fontFamily="@font/gmarket_sans_bold"
        android:textSize="18sp"
        android:text="지역구 검색"
        />




    <ImageView
        android:id="@+id/mainCandidateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main4"
        app:layout_constraintLeft_toRightOf="@id/mainDistrictBtn"
        app:layout_constraintTop_toTopOf="@id/mainDistrictBtn"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/mainCandidateText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/mainCandidateBtn"
        app:layout_constraintStart_toStartOf="@id/mainCandidateBtn"
        app:layout_constraintEnd_toEndOf="@id/mainCandidateBtn"
        android:textColor="@color/candidateSearchFontColor"
        android:fontFamily="@font/gmarket_sans_bold"
        android:textSize="18sp"
        android:text="후보자 검색"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
