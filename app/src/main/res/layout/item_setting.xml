<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/settingItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_medium"
        android:textSize="20sp"
        android:paddingStart="20dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="후원하기" />

    <ImageView
        android:id="@+id/settingArrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/settingItem"
        app:layout_constraintTop_toTopOf="@id/settingItem"
        app:layout_constraintBottom_toBottomOf="@id/settingItem"
        app:layout_constraintHorizontal_bias="1"
        android:src="@drawable/ic_setting_arrow"
        />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navDeactivate"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/settingItem"/>

</androidx.constraintlayout.widget.ConstraintLayout>