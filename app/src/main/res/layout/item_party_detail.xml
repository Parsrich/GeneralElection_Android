<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/candidateInfoBackgroundColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/promiseNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textAlignment="center"
            android:fontFamily="@font/gmarket_sans_bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="#BEC4E1"
            tools:text="12"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:textSize="18sp"
            android:textColor="@color/birthFontColor"
            >
            <TextView
                android:id="@+id/promiseContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginRight="15dp"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/detailIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"

                android:fontFamily="@font/gmarket_sans_medium"
                tools:text="testsafadssadfsa\n test \n test"
                />
            <ImageView
                android:id="@+id/detailIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_serch2"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/promiseContent"
                app:layout_constraintVertical_bias="0.4"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/candidateInfoBackgroundColor"/>

</LinearLayout>
